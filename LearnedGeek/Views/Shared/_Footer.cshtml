@{
    var currentYear = DateTime.UtcNow.Year;
    var navItems = new[] { "Home", "About", "Work", "Services", "Contact" };
}

<footer class="bg-neutral-950 text-neutral-400">
    <div class="max-w-6xl mx-auto px-6 lg:px-8 py-16">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
            <!-- Brand -->
            <div class="space-y-4">
                <div class="flex items-center gap-3">
                    <img src="~/img/learned-geek-logo.png" alt="Learned Geek" class="h-8 w-8 invert" />
                    <span class="font-semibold text-white tracking-tight">
                        Learned Geek
                    </span>
                </div>
                <p class="text-sm text-neutral-500 leading-relaxed max-w-xs">
                    Learning by building. Solving problems across disciplines.
                </p>
            </div>

            <!-- Navigation -->
            <div class="space-y-4">
                <h4 class="text-xs font-semibold text-neutral-500 uppercase tracking-wider">
                    Navigation
                </h4>
                <nav class="flex flex-col gap-2">
                    @foreach (var navItem in navItems)
                    {
                        var action = navItem == "Home" ? "Index" : navItem;
                        <a asp-controller="Home" asp-action="@action"
                           class="text-sm text-neutral-400 hover:text-white transition-colors">
                            @navItem
                        </a>
                    }
                </nav>
            </div>

            <!-- Contact (obfuscated to prevent scraping) -->
            <div class="space-y-4">
                <h4 class="text-xs font-semibold text-neutral-500 uppercase tracking-wider">
                    Get in Touch
                </h4>
                <a id="footer-email" href="#"
                   data-user="hello" data-domain="learnedgeek.com"
                   class="text-sm text-neutral-400 hover:text-white transition-colors block">
                    <span id="footer-email-text"></span>
                </a>
            </div>
        </div>

        <div class="mt-16 pt-8 border-t border-neutral-800 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <p class="text-xs text-neutral-600">
                &copy; @currentYear Learned Geek LLC. All rights reserved.
            </p>
            <div class="flex items-center gap-4">
                <span class="text-xs text-neutral-700">
                    Hosted by <a href="https://www.SmarterASP.NET/index?r=mcarthey" target="_blank" rel="noopener" class="hover:text-neutral-500 transition-colors">SmarterASP.NET</a>
                </span>
                <a asp-controller="Home" asp-action="Privacy"
                   class="text-xs text-neutral-600 hover:text-neutral-400 transition-colors">
                    Privacy Policy
                </a>
            </div>
        </div>
    </div>
</footer>

<script>
    // Build footer email address from data attributes to prevent scraping
    (function() {
        const link = document.getElementById('footer-email');
        const text = document.getElementById('footer-email-text');
        if (link && text) {
            const user = link.dataset.user;
            const domain = link.dataset.domain;
            const email = user + '@@' + domain;
            link.href = 'mailto:' + email;
            text.textContent = email;
        }
    })();
</script>
