@{
    ViewData["Title"] = "AI Assistant via SMS";
}

<div class="bg-white dark:bg-neutral-900 transition-colors">
    <!-- Header -->
    <section class="py-24 lg:py-32 border-b border-neutral-200 dark:border-neutral-700">
        <div class="max-w-4xl mx-auto px-6 lg:px-8">
            <span class="text-xs font-semibold text-neutral-400 dark:text-neutral-500 uppercase tracking-widest">
                Try It
            </span>
            <h1 class="mt-4 text-4xl md:text-5xl font-semibold text-neutral-900 dark:text-white leading-tight">
                AI Assistant via SMS
            </h1>
            <p class="mt-6 text-lg text-neutral-600 dark:text-neutral-300">
                Get instant AI-powered answers by text message.
            </p>
        </div>
    </section>

    <!-- Content -->
    <section class="py-16 lg:py-24">
        <div class="max-w-4xl mx-auto px-6 lg:px-8">

            <!-- CTA Card -->
            <div class="bg-neutral-50 dark:bg-neutral-800 rounded-2xl p-8 md:p-12 mb-12 border border-neutral-200 dark:border-neutral-700">
                <p class="text-2xl md:text-3xl font-semibold text-neutral-900 dark:text-white mb-4">
                    Text <a href="sms:+12058984335" class="text-blue-600 dark:text-blue-400 hover:underline">(205) 898-4335</a>
                </p>
                <p class="text-lg text-neutral-600 dark:text-neutral-300 mb-6">
                    Ask any question and receive an instant, automated response powered by local AI.
                </p>
                <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-neutral-200 dark:border-neutral-700">
                    <p class="text-neutral-700 dark:text-neutral-300 mb-4">
                        By texting this number, you consent to receive automated AI-generated responses to your messages.
                        Message frequency varies based on your usage. <strong>Standard message and data rates may apply.</strong>
                    </p>
                    <ul class="space-y-2 text-neutral-600 dark:text-neutral-400">
                        <li>Text <strong>STOP</strong> to opt out at any time</li>
                        <li>Text <strong>HELP</strong> for assistance</li>
                    </ul>
                </div>
            </div>

            <!-- How It Works -->
            <div class="prose prose-neutral dark:prose-invert max-w-none">
                <h2>How It Works</h2>
                <ol>
                    <li><strong>Send a text</strong> to (205) 898-4335 with any question</li>
                    <li><strong>Receive a response</strong> generated by our AI assistant within seconds</li>
                    <li><strong>Continue the conversation</strong> — the assistant remembers context within your session</li>
                </ol>
                <p>
                    The service is designed for general questions about software development, technology, and related topics.
                    Responses are AI-generated and provided for informational purposes only.
                </p>

                <h2>Important Information</h2>
                <ul>
                    <li>This is an automated AI service — all responses are generated by artificial intelligence</li>
                    <li>Message and data rates from your wireless carrier may apply</li>
                    <li>Message frequency depends on your usage — we only respond to messages you send</li>
                    <li>We do not send unsolicited promotional or marketing messages</li>
                    <li>Available to users in the United States</li>
                </ul>

                <h2>Opt Out &amp; Help</h2>
                <ul>
                    <li>Text <strong>STOP</strong> to (205) 898-4335 to stop receiving messages at any time</li>
                    <li>Text <strong>HELP</strong> to (205) 898-4335 for service information</li>
                    <li>Email <a href="mailto:hello@learnedgeek.com">hello@learnedgeek.com</a> for additional support</li>
                </ul>

                <hr class="my-8" />

                <p class="text-sm text-neutral-500">
                    <a asp-action="SmsPrivacy">Privacy Policy</a> |
                    <a asp-action="SmsTerms">Terms and Conditions</a>
                </p>
            </div>
        </div>
    </section>
</div>
