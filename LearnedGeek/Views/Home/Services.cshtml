@{
    ViewData["Title"] = "Services";

    var services = new[] {
        (
            icon: "Code2",
            title: "Software Development",
            description: "Building custom software solutions with clean architecture and maintainable code. From backend systems to full-stack applications.",
            points: new[] { "Backend development & APIs", "Full-stack web applications", "Database design & optimization", "Code review & refactoring" }
        ),
        (
            icon: "Layers",
            title: "Systems Architecture",
            description: "Designing technical systems that scale gracefully and remain maintainable over time. Emphasis on simplicity and clarity.",
            points: new[] { "System design & planning", "Architecture review & improvement", "Technical documentation", "Technology evaluation" }
        ),
        (
            icon: "Settings",
            title: "Technical Problem Solving",
            description: "Tackling complex technical challenges with structured analysis and practical solutions. No problem is too abstract or too specific.",
            points: new[] { "Root cause analysis", "Performance optimization", "Legacy system modernization", "Integration challenges" }
        ),
        (
            icon: "Users",
            title: "Technical Consulting",
            description: "Advising teams and organizations on technical strategy, engineering practices, and building strong technical foundations.",
            points: new[] { "Engineering process improvement", "Technical strategy", "Team mentorship", "Developer experience" }
        )
    };
}

<div class="bg-white">
    <!-- Header -->
    <section class="py-24 lg:py-32 border-b border-neutral-200">
        <div class="max-w-6xl mx-auto px-6 lg:px-8">
            <span class="text-xs font-semibold text-neutral-400 uppercase tracking-widest">
                Services
            </span>
            <h1 class="mt-4 text-4xl md:text-5xl font-semibold text-neutral-900 leading-tight max-w-2xl">
                How I can help
            </h1>
            <p class="mt-6 text-lg text-neutral-600 max-w-xl">
                Straightforward technical help for organizations and teams who
                need thoughtful engineering and honest expertise.
            </p>
        </div>
    </section>

    <!-- Services Grid -->
    <section class="py-24 lg:py-32">
        <div class="max-w-6xl mx-auto px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
                @foreach (var service in services)
                {
                    <div class="group p-8 lg:p-10 border border-neutral-200 hover:border-neutral-400 transition-colors">
                        <div class="h-12 w-12 border border-neutral-300 flex items-center justify-center mb-6 group-hover:border-neutral-900 transition-colors">
                            <span class="text-neutral-600 group-hover:text-neutral-900 transition-colors">
                                <partial name="Icons/_@service.icon" />
                            </span>
                        </div>

                        <h3 class="text-xl font-semibold text-neutral-900 mb-3">
                            @service.title
                        </h3>

                        <p class="text-neutral-600 leading-relaxed mb-6">
                            @service.description
                        </p>

                        <ul class="space-y-2">
                            @foreach (var point in service.points)
                            {
                                <li class="flex items-center gap-3 text-sm text-neutral-500">
                                    <span class="h-1 w-1 bg-neutral-400 rounded-full flex-shrink-0"></span>
                                    @point
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Approach -->
    <section class="py-24 lg:py-32 bg-neutral-50 border-t border-neutral-200">
        <div class="max-w-6xl mx-auto px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
                <div>
                    <h2 class="text-2xl md:text-3xl font-semibold text-neutral-900 leading-tight">
                        A straightforward approach
                    </h2>
                </div>
                <div class="space-y-6 text-neutral-600 leading-relaxed">
                    <p>
                        No unnecessary complexity. No buzzwords. Just honest assessment
                        of what's needed, clear communication about what's possible, and
                        focused execution on what matters.
                    </p>
                    <p>
                        Every engagement starts with understanding the actual problem â€”
                        not the symptoms, not assumptions, but the real challenge. From there,
                        the solution emerges from the constraints and goals, not from a
                        predetermined template.
                    </p>
                    <p>
                        The goal isn't to build the most impressive system or use the
                        trendiest technology. It's to solve the problem in a way that's
                        maintainable, understandable, and appropriate for the context.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="py-24 lg:py-32 border-t border-neutral-200">
        <div class="max-w-6xl mx-auto px-6 lg:px-8 text-center">
            <h2 class="text-2xl md:text-3xl font-semibold text-neutral-900 mb-4">
                Let's talk about your project
            </h2>
            <p class="text-neutral-600 mb-8 max-w-md mx-auto">
                Whether it's a specific problem or a broader technical challenge,
                I'm happy to discuss how I can help.
            </p>
            <a asp-action="Contact" class="inline-flex items-center gap-2 px-6 py-3 bg-neutral-900 text-white text-sm font-medium hover:bg-neutral-800 transition-colors">
                Get in Touch
                <partial name="Icons/_ArrowRight" />
            </a>
        </div>
    </section>
</div>
