@using LearnedGeek.Models
@model BlogPost

<article class="group border border-neutral-200 hover:border-neutral-400 transition-colors">
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <div class="aspect-[16/10] bg-neutral-100 overflow-hidden">
            <img src="@Model.Image"
                 alt="@Model.Title"
                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
        </div>
    }
    <div class="p-6 lg:p-8">
        <div class="flex items-center gap-3 mb-3">
            <span class="px-2 py-1 text-xs font-medium @Model.Category.ToColorClass()">
                @Model.Category.ToDisplayName()
            </span>
            <time datetime="@Model.Date.ToString("yyyy-MM-dd")" class="text-xs text-neutral-400">
                @Model.Date.ToString("MMMM d, yyyy")
            </time>
        </div>
        <a asp-action="Post" asp-route-slug="@Model.Slug" class="block">
            <h3 class="text-lg font-semibold text-neutral-900 group-hover:text-neutral-600 transition-colors">
                @Model.Title
            </h3>
        </a>
        <p class="mt-3 text-neutral-600 text-sm leading-relaxed">
            @Model.Description
        </p>
        @if (Model.Tags.Length > 0)
        {
            <div class="mt-4 flex flex-wrap gap-2">
                @foreach (var tag in Model.Tags)
                {
                    <span class="px-2 py-1 text-xs font-medium text-neutral-500 bg-neutral-100">
                        @tag
                    </span>
                }
            </div>
        }
    </div>
</article>
